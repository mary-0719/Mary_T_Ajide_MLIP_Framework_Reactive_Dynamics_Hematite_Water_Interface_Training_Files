#----------------------------
# GENERAL VASP SETTINGS
#----------------------------

ENCUT       = 520           # Plane-wave cutoff energy (eV)
ALGO        = Normal        # Default electronic minimization algorithm
PREC        = A             # Accuracy level
LREAL       = Auto          # Projectors in real-space (Auto for performance)
KSPACING    = 0.150         # K-point density
ISMEAR      = 0             # Smearing method (0 = Gaussian)
SIGMA       = 0.1           # Smearing width (eV)

ISYM        = 0             # Turn off symmetry (important for surfaces)
NCORE       = 4             # Number of cores per MPI rank
LWAVE       = .FALSE.
LCHARG      = .FALSE.

#----------------------------
# VAN DER WAALS CORRECTION (SCAN+rVV10)
#----------------------------

METAGGA     = SCAN
LUSE_VDW    = .TRUE.
BPARAM      = 15.7          # rVV10 parameter
CPARAM      = 0.0093
LASPH       = .TRUE.

#----------------------------
# MOLECULAR DYNAMICS (AIMD)
#----------------------------

IBRION           = 0                  # MD mode
MDALGO           = 3                  # Langevin thermostat (NVT)
ISIF             = 2                  # No cell degrees of freedom
LANGEVIN_GAMMA   = 10.0 10.0          # Friction coefficients (2D slab)
POTIM            = 1.0                # Timestep (fs)
TEBEG            = 200                # Initial temperature (K)
TEEND            = 500                # Final temperature (K)
NSW              = 5000               # Number of MD steps

#----------------------------
# MACHINE LEARNING
#----------------------------

ML_LMLFF         = .TRUE.
ML_MODE          = TRAIN
